generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id    Int    @id @default(autoincrement())
  name  String
  price Float
}

model Todo {
  id        Int    @id @default(autoincrement())
  name      String
  remark    String
  status    String @default("use")
  member_id Int
  member    Member @relation(fields: [member_id], references: [id])
}

model Member {
  id       Int    @id @default(autoincrement())
  name     String
  username String
  password String
  todos    Todo[]
}
